<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/item_day_size"
        android:layout_height="@dimen/item_day_size"
        android:id="@+id/rl"
        android:paddingTop="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_primary_r60"
      >

        <TextView
            android:id="@+id/tv_greg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:padding="0dp"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_greg"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|top"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
        <FrameLayout
            android:id="@+id/fl_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_sub_r60"
            android:visibility="gone"></FrameLayout>

        <FrameLayout
            android:id="@+id/fl_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_primary_border_r60"
            android:visibility="gone"></FrameLayout>

        <TextView
            android:id="@+id/tv_holiday"
            android:textSize="10sp"
            android:text="假"
            android:layout_marginRight="2dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/iv_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="right"
                android:layout_margin="4dp"
                android:background="@drawable/bg_left_bottom" />
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>

