<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_widget_r60">

        <ImageView
            android:id="@+id/iv_birth"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_svg_birthday"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_greg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:padding="0dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_greg"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|top"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <FrameLayout
            android:id="@+id/fl_event"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_above="@id/tv_lunar"
            android:layout_toRightOf="@id/tv_greg"
            android:background="#fff"
            android:visibility="gone"></FrameLayout>
    </RelativeLayout>
</FrameLayout>

